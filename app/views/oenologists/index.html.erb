<p id="notice"><%= notice %></p>

<h1>Oenologists</h1>

<table class="text-center">
  <thead>
    <tr>
      <th>|Name|</th>
      <th>|Age|</th>
      <th>|Nationality|</th>
      <th>|Job|</th>
      <th colspan="3">|Opciones|</th>
    </tr>
  </thead>

  <tbody>
    <% @oenologists.each do |oenologist| %>
      <tr>
        <td><%= oenologist.name %></td>
        <td><%= oenologist.age %></td>
        <td><%= oenologist.nationality %></td>
        <td>
          <% oenologist.oenologist_magazines.all.each do |om| %>
            <div class="row" style="margin-left:0;padding-right: 10px;">
               <div class="col-12"> Magazine: <%= om.magazine.name%></div>
               <div class="col-12"> cargo: <%= om.charge %> </div>
            </div>
          <% end %>
        </td>
        <td><%= link_to 'Show', oenologist %>
        <%= link_to 'Edit', edit_oenologist_path(oenologist) %>
        <%= link_to 'Destroy', oenologist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

